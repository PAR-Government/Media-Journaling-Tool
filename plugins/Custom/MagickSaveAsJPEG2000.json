{
    "name": "MagickSaveAsJPEG2000",
    "operation": {
      "name": "OutputJpg",
      "category": "Output",
      "description": "Save Input file as JPEG 2000",
      "software": "ImageMagick",
      "version": "7",
      "arguments":{
        "quality": {
          "type":"int[40:100]",
          "defaultvalue":"90",
          "description":"Image Quality"
        },
        "resolutions": {
          "type":"int[1:100]",
          "defaultvalue":"1",
          "description":"Number of resolutions to encode"
        },
        "encoding": {
          "type":"list",
          "value": ["J2K","J2C","JP2"],
          "defaultvalue":"1",
          "description":"Encoding"
        }
      },
      "transitions": ["image.image"]
    },
    "suffix" : ".jp2",
    "command": {
      "win": [
        "magick",
        "convert",
        "{inputimage}",
        "-encoding",
        "{encoding}",
        "-define",
        "jp2:number-resolutions={resolutions}",
        "-quality",
        "{quality}",
        "{outputimage}"
      ],
      "default": [
        "convert",
        "{inputimage}",
        "-encoding",
        "{encoding}",
        "-define",
        "jp2:number-resolutions={resolutions}",
        "-quality",
        "{quality}",
        "{outputimage}"
      ]
    }
}
