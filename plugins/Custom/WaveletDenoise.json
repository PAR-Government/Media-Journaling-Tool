{
    "name": "WaveletDenoise",
    "operation": {
      "name": "Blur",
      "category": "Filter",
      "description": "Removes Noise from an image using the Wavelet specification. (https://www.imagemagick.org/script/command-line-options.php#wavelet-denoise)",
      "software": "ImageMagick",
      "version": "7.0",
      "arguments":{
        "threshold":{
          "type": "float[0:1]",
          "defaultvalue": 0.1,
          "description": "Wavelet threshold."
        },
        "softness":{
          "type": "float[0:1]",
          "defaultvalue": 0,
          "description": "Softness attenuates the threshold and typically ranges from 0.0 (none) to 1.0."
        },
        "Blur Type": {
              "type": "text",
              "defaultvalue": "Wavelet Denoise",
              "description": ""
        }
      },
      "transitions": ["image.image"]
    },
    "command": {
      "default":[
        "convert",
        "-wavelet-denoise",
        "{threshold}%",
        "{inputimage}",
        "{outputimage}"
      ],
      "win": [
        "magick",
        "convert",
        "-wavelet-denoise",
        "{threshold}%",
        "{inputimage}",
        "{outputimage}"
      ],
      "darwin":[
        "convert",
        "-wavelet-denoise",
        "{threshold}%",
        "{inputimage}",
        "{outputimage}"
      ],
      "linux":[
        "convert",
        "-wavelet-denoise",
        "{threshold}%",
        "{inputimage}",
        "{outputimage}"
      ]
    }
}
